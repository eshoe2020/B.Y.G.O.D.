<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your BYGODs</title>
    <!--Google Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&family=Special+Elite&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>B.Y.G.O.D.</h1>
    <h2>Before You Get Old or Die</h2>
    <h3>this is your profile page</h3>
    <div class=navbar-vertical">
        <nav>
            <ul class="right">
                <li>
                    <a href="/users/<%= user._id %>/profile">Your Profile</a>
                    <a href="/items/new">New BYGOD</a>
                    <a href="/users/allItems">All BYGODs</a>
                    <a href="/logout">Logout</a>
                </li>
            </ul>
        </nav>
    </div>

    <main>
        <div id="user-profile">
           
            <img class="user-photo" src="<%= user.avatarURL %>" alt="">
            <span class="user-name"><%= user.name %></span>
        </div>
        <div id="user-items">BYGOD...</div>
        <%items.forEach(function(item, idx){ %>
            <li>
                <%= item.content %> <a href="/items/<%= item._id %>/edit">
                <button class="edit-button">Edit</button>
                </a> 
            </li>
            
   
        <% })%>
    


    </main>


</body>
</html>

